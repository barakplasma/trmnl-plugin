{% include 'shared.liquid' %}

{% if kids.size > 0 %}
<div class="layout layout--col gap--space-between h--full">
    {% for kid_data in kids %}
      {% assign parts = kid_data | split: "," %}
      {% assign name = parts[0] %}
      {% assign birthday = parts[1] %}
      {% assign bday_formatted = parts[2] %}
      {% assign now_formatted = parts[3] %}
      {% assign years = parts[4] %}
      {% assign months = parts[5] %}
      {% assign days = parts[6] %}

    <div class="layout layout--col gap--medium">
        <span class="value value--medium">{{ name }}</span>
        <div class="layout layout--col">
            <span class="label">Born on: {{ bday_formatted }}</span>
            <span class="label">Age today: {{ now_formatted }}</span>
        </div>
        <span class="value">= {{ years }} years {{ months }} months {{ days }} days</span>
    </div>
    {% unless forloop.last %}
    <div class="b-h-gray-1"></div>
    {% endunless %}
    {% endfor %}
</div>
{% else %}
<div class="layout layout--col justify-center h--full">
    <span class="label">Configure kids names and birthdays in plugin settings</span>
</div>
{% endif %}

<div class="title_bar">
    <span class="title">Kids Age</span>
</div>
